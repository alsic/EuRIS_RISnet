{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "overhead_construction_v3_0.json",
  "title": "RISNET overhead_construction schema",
  "type": "object",
  "required": [
    "type",
    "features"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "FeatureCollection"
      ]
    },
    "features": {
      "type": "array",
      "items": {
        "title": "GeoJSON Feature",
        "type": "object",
        "required": [
          "type",
          "properties",
          "geometry"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Feature"
            ]
          },
          "properties": {
            "type": "object",
            "allOf": [
              {
                "$ref": "base/baseobject_v3_0.json"
              }
            ],
            "properties": {
              "network_section_ref": {
                "$ref": "base/common_properties_v3_0.json#/properties/network_section_ref"
              },
              "gauge_ref": {
                "$ref": "base/common_properties_v3_0.json#/properties/gauge_ref"
              },
              "un_locode": {
                "$ref": "base/common_properties_v3_0.json#/properties/un_locode"
              },
              "un_loname": {
                "$ref": "base/common_properties_v3_0.json#/properties/un_loname"
              },
              "fairway_km": {
                "$ref": "base/common_properties_v3_0.json#/properties/fairway_km"
              },
              "oc_type": {
                "description": "Type of Overhead Construction. Allowed values: 0 (unknown), 1 (cable), 2 (pipe), 3 (conveyor).",
                "type": "integer",
                "minimum": 0,
                "maximum": 3
              },
              "height_ref_level_name": {
                "$ref": "base/common_properties_v3_0.json#/properties/height_ref_level_name"
              },
              "vertical_clearance_val_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/vertical_clearance_val_cm"
              },
              "vertical_clearance_datum": {
                "$ref": "base/common_properties_v3_0.json#/properties/vertical_clearance_datum"
              },
              "safety_margin_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/safety_margin_cm"
              },
              "cl_height_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/cl_height_cm"
              },
              "abs_height_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/abs_height_cm"
              },
              "max_height_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_height_cm"
              },
              "cl_width_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/cl_width_cm"
              },
              "max_width_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_width_cm"
              },
              "orient": {
                "$ref": "base/common_properties_v3_0.json#/properties/orient"
              }
            },
            "required": [
              "network_section_ref",
              "fairway_km",
              "cl_height_cm"
            ],
            "unevaluatedProperties": false
          },
          "geometry": {
            "$ref": "base/GeoJSONPoint_v3_0.json"
          }
        }
      }
    }
  }
}