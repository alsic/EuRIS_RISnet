{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sailing_speed_v3_0.json",
  "title": "RISNET sailing_speed schema",
  "type": "object",
  "required": [
    "type",
    "features"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "FeatureCollection"
      ]
    },
    "features": {
      "type": "array",
      "items": {
        "title": "GeoJSON Feature",
        "type": "object",
        "required": [
          "type",
          "properties"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Feature"
            ]
          },
          "properties": {
            "type": "object",
            "properties": {
              "network_section_ref": {
                "$ref": "base/common_properties_v3_0.json#/properties/network_section_ref"
              },
              "ship_category": {
                "$ref": "base/common_properties_v3_0.json#/properties/ship_category"
              },
              "direction": {
                "$ref": "base/common_properties_v3_0.json#/properties/direction"
              },
              "min_draught_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/min_draught_cm"
              },
              "max_draught_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_draught_cm"
              },
              "min_width_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/min_width_cm"
              },
              "max_width_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_width_cm"
              },
              "min_length_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/min_length_cm"
              },
              "max_length_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_length_cm"
              },
              "avg_speed_kmh": {
                "description": "Average speed for vessels within this category (km/h)",
                "type": "number",
                "multipleOf": 0.001
              },
              "max_speed_kmh": {
                "description": "Maximum allowed speed for vessels within this category (km/h)",
                "type": "number",
                "multipleOf": 0.001
              },
              "min_speed_kmh": {
                "description": "Minimum allowed speed for vessels within this category (km/h)",
                "type": "number",
                "multipleOf": 0.001
              }
            },
            "required": [
              "network_section_ref",
              "direction"
            ],
            "unevaluatedProperties": false
          }
        }
      }
    }
  }
}