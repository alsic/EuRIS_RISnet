{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "node_v3_0.json",
  "title": "RISNET node schema",
  "type": "object",
  "required": [
    "type",
    "features"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "FeatureCollection"
      ]
    },
    "features": {
      "type": "array",
      "items": {
        "title": "GeoJSON Feature",
        "type": "object",
        "required": [
          "type",
          "properties",
          "geometry"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Feature"
            ]
          },
          "properties": {
            "type": "object",
            "allOf": [
              {
                "$ref": "base/baseobject_v3_0.json"
              }
            ],
            "properties": {
              "border_ref": {
                "description": "RIS_ID of the Node of a neighbouring country in case it is a sharp border. The two networks will be connected via two nodes referencing each other in this field.",
                "oneOf": [
                  {
                    "type": "string",
                    "format": "uuid"
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "strategic_point_type": {
                "$ref": "base/common_properties_v3_0.json#/properties/strategic_point_type"
              }
            },
            "required": [],
            "unevaluatedProperties": false
          },
          "geometry": {
            "$ref": "base/GeoJSONPoint_v3_0.json"
          }
        }
      }
    }
  }
}