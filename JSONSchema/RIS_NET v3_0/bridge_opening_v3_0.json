{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "bridge_opening_v3_0.json",
  "title": "RISNET bridge_opening schema",
  "type": "object",
  "required": [
    "type",
    "features"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "FeatureCollection"
      ]
    },
    "features": {
      "type": "array",
      "items": {
        "title": "GeoJSON Feature",
        "type": "object",
        "required": [
          "type",
          "properties",
          "geometry"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Feature"
            ]
          },
          "properties": {
            "type": "object",
            "allOf": [
              {
                "$ref": "base/baseobject_v3_0.json"
              }
            ],
            "properties": {
              "bridge_ref": {
                "$ref": "base/common_properties_v3_0.json#/properties/bridge_ref"
              },
              "cl_height_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/cl_height_cm"
              },
              "cl_height_open_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/cl_height_open_cm"
              },
              "abs_height_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/abs_height_cm"
              },
              "abs_height_open_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/abs_height_open_cm"
              },
              "max_height_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_height_cm"
              },
              "max_height_open_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_height_open_cm"
              },
              "cl_width_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/cl_width_cm"
              },
              "max_width_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_width_cm"
              },
              "pass_duration_minute": {
                "$ref": "base/common_properties_v3_0.json#/properties/pass_duration_minute"
              },
              "bridge_type": {
                "description": "This attribute indicates the type of the bridge opening.",
                "type": "integer",
                "enum": [
                  1,
                  3,
                  4,
                  5,
                  7,
                  12
                ]
              },
              "operable": {
                "description": "This attribute indicates, if the bridge opening can be operated in a way that it may be lifted to allow the passage of vessels that otherwise would exceed the clearance height (generally true for Lift Bridge and Drawbridge).",
                "oneOf": [
                  {
                    "type": "boolean"
                  },
                  {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 1
                  }
                ]
              },
              "operation_type": {
                "$ref": "base/common_properties_v3_0.json#/properties/operation_type"
              },
              "direction": {
                "description": "This attribute indicates, if the bridge opening can only be passed by vessels coming from a certain direction. Allowed values: UPS (upstream), DWN (downstream), ALL (all directions)",
                "type": "string",
                "enum": [
                  "UPS",
                  "DWN",
                  "ALL"
                ],
                "default": "ALL"
              },
              "position": {
                "$ref": "base/common_properties_v3_0.json#/properties/position"
              }
            },
            "required": [
              "bridge_ref",
              "cl_height_cm",
              "cl_width_cm",
              "bridge_type"
            ],
            "unevaluatedProperties": false
          },
          "geometry": {
            "$ref": "base/GeoJSONPoint_v3_0.json"
          }
        }
      }
    }
  }
}