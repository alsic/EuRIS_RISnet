{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "turning_basin_v3_0.json",
  "title": "RISNET turning_basin schema",
  "type": "object",
  "required": [
    "type",
    "features"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "FeatureCollection"
      ]
    },
    "features": {
      "type": "array",
      "items": {
        "title": "GeoJSON Feature",
        "type": "object",
        "required": [
          "type",
          "properties",
          "geometry"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Feature"
            ]
          },
          "properties": {
            "type": "object",
            "allOf": [
              {
                "$ref": "base/baseobject_v3_0.json"
              }
            ],
            "properties": {
              "network_section_ref": {
                "$ref": "base/common_properties_v3_0.json#/properties/network_section_ref"
              },
              "fairway_km": {
                "$ref": "base/common_properties_v3_0.json#/properties/fairway_km"
              },
              "max_length_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_length_cm"
              },
              "max_width_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_width_cm"
              },
              "max_draught_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_draught_cm"
              }
            },
            "required": [
              "network_section_ref",
              "fairway_km"
            ],
            "unevaluatedProperties": false
          },
          "geometry": {
            "$ref": "base/GeoJSONPoint_v3_0.json"
          }
        }
      }
    }
  }
}