{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "node_cb_v3_0.json",
    "title": "RISNET node_cb schema",
    "type": "object",
    "required": [
      "type",
      "features"
    ],
    "properties": {
      "type": {
        "type": "string",
        "enum": ["FeatureCollection"]
      },
      "features": {
        "type": "array",
        "items": {
          "title": "GeoJSON Feature",
          "type": "object",
          "required": [
            "type",
            "properties",
            "geometry"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["Feature"]
            },
            "properties": {
              "type": "object",
              "allOf": [
                {
                  "$ref": "base/baseobject_v3_0.json"
                }
              ],
              "properties": {
                "node_ref": {
                  "description": "RIS_ID of the same node in the RIS.net of the other country, which shares the common border and is responsible for providing the geometric data. The reference is necessary, because some attributes (e.g. OBJ_NAME) might deviate from each other.",
                  "type": "string",
                  "format": "uuid"
                }
              },
              "required": ["node_ref"],
              "unevaluatedProperties": false
            },
            "geometry": {
              "$ref": "base/GeoJSONPoint_v3_0.json"
            }
          }
        }
      }
    }
  }
  