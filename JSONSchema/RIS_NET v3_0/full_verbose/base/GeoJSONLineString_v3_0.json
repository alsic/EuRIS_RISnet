{
    "$id": "base/GeoJSONLineString_v3_0.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "GeoJSON LineString",
    "type": "object",
    "required": [
        "type",
        "coordinates"
    ],
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "LineString"
            ]
        },
        "coordinates": {
            "type": "array",
            "minItems": 2,
            "items": {
                "type": "array",
                "minItems": 2,
                "items": {
                    "type": "number"
                }
            }
        }
    }
}