{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sailing_dimension_v3_0.json",
  "title": "RISNET sailing_dimension schema",
  "type": "object",
  "required": [
    "type",
    "features"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "FeatureCollection"
      ]
    },
    "features": {
      "type": "array",
      "items": {
        "title": "GeoJSON Feature",
        "type": "object",
        "required": [
          "type",
          "properties"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Feature"
            ]
          },
          "properties": {
            "type": "object",
            "properties": {
              "id": {
                "description": "ID of the record",
                "type": "string",
                "format": "uuid"
              },
              "object_ref": {
                "$ref": "base/common_properties_v3_0.json#/properties/object_ref"
              },
              "object_type": {
                "$ref": "base/common_properties_v3_0.json#/properties/object_type"
              },
              "ship_category": {
                "$ref": "base/common_properties_v3_0.json#/properties/ship_category"
              },
              "direction": {
                "$ref": "base/common_properties_v3_0.json#/properties/direction"
              },
              "origin": {
                "description": "This attribute indicates whether the given dimensional limits are based on the legal regulations or to the actual field practice. A journey planning software might only use the values which are actually applied in the field. Allowed values: 1 (legal), 2 (practical).",
                "type": "integer",
                "enum": [
                  1,
                  2
                ]
              },
              "max_length_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_length_cm"
              },
              "min_length_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/min_length_cm"
              },
              "max_width_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_width_cm"
              },
              "min_width_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/min_width_cm"
              },
              "max_draught_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_draught_cm"
              },
              "min_draught_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/min_draught_cm"
              },
              "max_height_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_height_cm"
              },
              "min_height_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/min_height_cm"
              },
              "gauge_ref": {
                "$ref": "base/common_properties_v3_0.json#/properties/gauge_ref"
              },
              "applicability_water_level_min": {
                "description": "Actual water level at the reference gauge station the sailing dimension is applicable from (minimum water level) in cm or m³/s",
                "oneOf": [
                  {
                    "type": "integer"
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "applicability_water_level_max": {
                "description": "Actual water level at the reference gauge station the sailing dimension is applicable to (maximum water level) in cm or m³/s",
                "oneOf": [
                  {
                    "type": "integer"
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "applicability_water_level_unit": {
                "description": "Distinction if applicability_water_level_min and _max are provided in discharge (m³/s) or height (cm)",
                "oneOf": [
                  {
                    "type": "integer"
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "bow_thruster": {
                "description": "Sailing Dimensions are explicitly applicable to a vessel having a bow thruster or in specific do not have a bow thruster",
                "oneOf": [
                  {
                    "type": "boolean"
                  },
                  {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 1
                  },
                  {
                    "type": "null"
                  }
                ]
              }
            },
            "required": [
              "id",
              "object_ref",
              "object_type",
              "direction",
              "origin"
            ],
            "unevaluatedProperties": false
          }
        }
      }
    }
  }
}