{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "anchorage_area_v3_0.json",
  "title": "RISNET anchorage_area schema",
  "type": "object",
  "required": [
    "type",
    "features"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "FeatureCollection"
      ]
    },
    "features": {
      "type": "array",
      "items": {
        "title": "GeoJSON Feature",
        "type": "object",
        "required": [
          "type",
          "properties",
          "geometry"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Feature"
            ]
          },
          "properties": {
            "type": "object",
            "allOf": [
              {
                "$ref": "base/baseobject_v3_0.json"
              }
            ],
            "properties": {
              "network_section_ref": {
                "$ref": "base/common_properties_v3_0.json#/properties/network_section_ref"
              },
              "harbour_basin_ref": {
                "$ref": "base/common_properties_v3_0.json#/properties/harbour_basin_ref"
              },
              "un_locode": {
                "$ref": "base/common_properties_v3_0.json#/properties/un_locode"
              },
              "un_loname": {
                "$ref": "base/common_properties_v3_0.json#/properties/un_loname"
              },
              "fairway_km": {
                "$ref": "base/common_properties_v3_0.json#/properties/fairway_km"
              },
              "max_length_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_length_cm"
              },
              "max_width_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_width_cm"
              },
              "max_draught_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_draught_cm"
              },
              "cl_width_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/cl_width_cm"
              },
              "cl_length_cm": {
                "description": "Available length in cm of the object.",
                "oneOf": [
                  {
                    "type": "integer"
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "ship_category": {
                "description": "Comma-separated list of ship category codes of allowed vessel types at the object.",
                "oneOf": [
                  {
                    "type": "string",
                    "maxLength": 80
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "clsdng": {
                "$ref": "base/common_properties_v3_0.json#/properties/clsdng"
              },
              "position": {
                "$ref": "base/common_properties_v3_0.json#/properties/position"
              },
              "category": {
                "description": "Comma-separated list of anchorage area category codes (multiple values allowed), indiciting if a vessel is allowed to throw an anchor. Allowed values: 1 (unrestricted anchorage), 2 (deep water anchorage), 3 (tanker anchorage), 4 (explosive anchorage), 5 (quarantine anchorage), 6 (sea-plane anchorage), 7 (small craft anchorage), 9 (anchorage for periods up to 24 hours), 10 (anchorage for pushing-navigation vessels, CEVNI signs E.5.4, E.5.5, E.5.6, E.5.7), 11 (anchorage for other vessels than pushing-navigation vessels, CEVNI signs E.5.8, E.5.9, E.5.10, E.5.11), 12 (anchorage for dry cargo vessels), 13 (anchorage for rafts).",
                "oneOf": [
                  {
                    "type": "string",
                    "maxLength": 30
                  },
                  {
                    "type": "null"
                  }
                ]
              }
            },
            "required": [
              "network_section_ref",
              "fairway_km"
            ],
            "unevaluatedProperties": false
          },
          "geometry": {
            "$ref": "base/GeoJSONPoint_v3_0.json"
          }
        }
      }
    }
  }
}