{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "radio_calling_point_v3_0.json",
  "title": "RISNET radio_calling_point schema",
  "type": "object",
  "required": [
    "type",
    "features"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "FeatureCollection"
      ]
    },
    "features": {
      "type": "array",
      "items": {
        "title": "GeoJSON Feature",
        "type": "object",
        "required": [
          "type",
          "properties",
          "geometry"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Feature"
            ]
          },
          "properties": {
            "type": "object",
            "allOf": [
              {
                "$ref": "base/baseobject_v3_0.json"
              }
            ],
            "properties": {
              "network_section_ref": {
                "$ref": "base/common_properties_v3_0.json#/properties/network_section_ref"
              },
              "object_ref": {
                "description": "RIS_ID of a related object",
                "oneOf": [
                  {
                    "type": "string",
                    "format": "uuid"
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "object_type": {
                "type": "string",
                "maxLength": 50,
                "description": "Entity type name"
              },
              "un_locode": {
                "$ref": "base/common_properties_v3_0.json#/properties/un_locode"
              },
              "un_loname": {
                "$ref": "base/common_properties_v3_0.json#/properties/un_loname"
              },
              "fairway_km": {
                "$ref": "base/common_properties_v3_0.json#/properties/fairway_km"
              },
              "traffic": {
                "oneOf": [
                  {
                    "type": "integer",
                    "enum": [1, 2, 3, 4],
                    "description": "Applicability direction: 1 = inbound (upstream), 2 = outbound (downstream), 3 = one-way, 4 = two-way"
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "strategic_point_type": {
                "$ref": "base/common_properties_v3_0.json#/properties/strategic_point_type"
              },
              "catcom": {
                "oneOf": [
                  {
                    "type": "integer",
                    "enum": [1, 2, 3, 4, 5, 6, 7, 8, 9],
                    "description": "Type of Radio Calling Point: 1 = VTS centre, 2 = VTS sector, 3 = IVS point, 4 = MIB, 5 = lock, 6 = bridge, 7 = custom, 8 = harbour, 9 = WLAN area"
                  },
                  {
                    "type": "null"
                  }
                ]
              }
            },
            "required": [
              "network_section_ref",
              "fairway_km"
            ],
            "unevaluatedProperties": false
          },
          "geometry": {
            "$ref": "base/GeoJSONPoint_v3_0.json"
          }
        }
      }
    }
  }
}