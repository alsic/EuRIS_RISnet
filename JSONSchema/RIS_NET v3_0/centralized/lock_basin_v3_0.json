{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "lock_basin_v3_0.json",
  "title": "RISNET lock_basin schema",
  "type": "object",
  "required": [
    "type",
    "features"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "FeatureCollection"
      ]
    },
    "features": {
      "type": "array",
      "items": {
        "title": "GeoJSON Feature",
        "type": "object",
        "required": [
          "type",
          "properties",
          "geometry"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Feature"
            ]
          },
          "properties": {
            "type": "object",
            "allOf": [
              {
                "$ref": "base/baseobject_v3_0.json"
              }
            ],
            "properties": {
              "lock_ref": {
                "$ref": "base/common_properties_v3_0.json#/properties/lock_ref"
              },
              "lock_type": {
                "description": "This attribute indicates the type of the lock basin. Allowed values: lokbsn (lock basin), loklft (lock lift)",
                "type": "string",
                "enum": [
                  "lokbsn",
                  "loklft"
                ]
              },
              "max_length_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_length_cm"
              },
              "max_width_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_width_cm"
              },
              "max_draught_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_draught_cm"
              },
              "max_height_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/max_height_cm"
              },
              "cl_width_cm": {
                "$ref": "base/common_properties_v3_0.json#/properties/cl_width_cm"
              },
              "cl_length_cm": {
                "description": "Available length of the lock basin in cm.",
                "oneOf": [
                  {
                    "type": "integer"
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "pass_duration_minute": {
                "$ref": "base/common_properties_v3_0.json#/properties/pass_duration_minute"
              },
              "supplies": {
                "description": "Comma separated list of available supplies (codes). Allowed values: 1 (drinking water), 2 (electrical power), 3 (fuel), 4 (put car ashore), 5 (bilge water disposal),  6 (paper waste disposal), 7 (plastic waste disposal), 8 (glass waste disposal), 9 (residual waste disposal), 10 (oil waste disposal), 11 (organic waste disposal), 12 (dangerous waste disposal), 13 (sewage water disposal).",
                "oneOf": [
                  {
                    "type": "string",
                    "maxLength": 256
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "position": {
                "$ref": "base/common_properties_v3_0.json#/properties/position"
              },
              "operation_mode": {
                "$ref": "base/common_properties_v3_0.json#/properties/operation_mode"
              }
            },
            "required": [
              "lock_ref",
              "lock_type",
              "max_length_cm",
              "max_width_cm"
            ],
            "unevaluatedProperties": false
          },
          "geometry": {
            "$ref": "base/GeoJSONPoint_v3_0.json"
          }
        }
      }
    }
  }
}