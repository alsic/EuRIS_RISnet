{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "terminal_v3_0.json",
  "title": "RISNET terminal schema",
  "type": "object",
  "required": [
    "type",
    "features"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "FeatureCollection"
      ]
    },
    "features": {
      "type": "array",
      "items": {
        "title": "GeoJSON Feature",
        "type": "object",
        "required": [
          "type",
          "properties",
          "geometry"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Feature"
            ]
          },
          "properties": {
            "type": "object",
            "allOf": [
              {
                "$ref": "base/baseobject_v3_0.json"
              }
            ],
            "properties": {
              "network_section_ref": {
                "$ref": "base/common_properties_v3_0.json#/properties/network_section_ref"
              },
              "harbour_ref": {
                "$ref": "base/common_properties_v3_0.json#/properties/harbour_ref"
              },
              "harbour_basin_ref": {
                "$ref": "base/common_properties_v3_0.json#/properties/harbour_basin_ref"
              },
              "berth_refs": {
                "$ref": "base/common_properties_v3_0.json#/properties/berth_refs"
              },
              "un_locode": {
                "$ref": "base/common_properties_v3_0.json#/properties/un_locode"
              },
              "un_loname": {
                "$ref": "base/common_properties_v3_0.json#/properties/un_loname"
              },
              "object_reference_code": {
                "description": "Object Reference Code, if needed for Electronic Reporting purposes.",
                "type": "string",
                "maxLength": 5
              },
              "fairway_km": {
                "$ref": "base/common_properties_v3_0.json#/properties/fairway_km"
              },
              "terminal_type": {
                "description": "Terminal type (for backwards compatibility). Allowed values: termnl (Terminal), trm01 (RORO-terminal), trm03 (Ferry-terminal), trm07 (Tanker-Terminal), trm08 (Passenger Terminal), trm10 (Container Terminal), trm11 (Bulk Terminal)",
                "type": "string",
                "enum": [
                  "termnl",
                  "trm01",
                  "trm03",
                  "trm07",
                  "trm08",
                  "trm10",
                  "trm11"
                ]
              },
              "connectivity": {
                "description": "Comma separated list indicating intermodality with other modes of transport (multiple values allowed). Allowed values: null = undefined, 0 = unknown, 1 = Rail, 2 = Road, 3 = Sea, 4 = Short Sea, 5 = Pipe, 6 = Air, 7 = Space",
                "oneOf": [
                  {
                    "type": "string",
                    "maxLength": 50
                  },
                  {
                    "type": "null"
                  }
                ]
              }
            },
            "required": [
              "network_section_ref",
              "object_reference_code",
              "fairway_km"
            ],
            "unevaluatedProperties": false
          },
          "geometry": {
            "$ref": "base/GeoJSONPoint_v3_0.json"
          }
        }
      }
    }
  }
}