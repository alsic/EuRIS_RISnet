{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "berthing_quay_v3_0.json",
  "title": "RISNET berthing_quay schema",
  "type": "object",
  "required": [
    "type",
    "features"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "FeatureCollection"
      ]
    },
    "features": {
      "type": "array",
      "items": {
        "title": "GeoJSON Feature",
        "type": "object",
        "required": [
          "type",
          "properties",
          "geometry"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Feature"
            ]
          },
          "properties": {
            "type": "object",
            "allOf": [
              {
                "$ref": "base/baseobject_v3_0.json"
              }
            ],
            "properties": {
              "berth_ref": {
                "$ref": "base/common_properties_v3_0.json#/properties/berth_ref"
              },
              "object_reference_code": {
                "$ref": "base/common_properties_v3_0.json#/properties/object_reference_code"
              }
            },
            "required": [
              "berth_ref"
            ],
            "unevaluatedProperties": false
          },
          "geometry": {
            "$ref": "base/GeoJSONPoint_v3_0.json"
          }
        }
      }
    }
  }
}