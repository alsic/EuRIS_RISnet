{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "caution_area_v3_0.json",
  "title": "RISNET caution_area schema",
  "type": "object",
  "required": [
    "type",
    "features"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "FeatureCollection"
      ]
    },
    "features": {
      "type": "array",
      "items": {
        "title": "GeoJSON Feature",
        "type": "object",
        "required": [
          "type",
          "properties",
          "geometry"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Feature"
            ]
          },
          "properties": {
            "type": "object",
            "allOf": [
              {
                "$ref": "base/baseobject_v3_0.json"
              }
            ],
            "properties": {
              "delimiting_distance_mark_refs": {
                "description": "Comma-separated RIS_IDs of the distance mark objects that delimit the caution_area.",
                "type": "string",
                "maxLength": 739
              },
              "caution_area_type": {
                "description": "Comma-separated list of caution area types. Multiple of the following values allowed: 0 = general, 1 = waterski, 2 = jet ski, 3 = recreational crafts, 4 = alternating traffic",
                "type": "string",
                "maxLength": 50,
                "default": "0"
              }
            },
            "required": [
              "delimiting_distance_mark_refs",
              "caution_area_type"
            ],
            "unevaluatedProperties": false
          },
          "geometry": {
            "$ref": "base/GeoJSONLineString_v3_0.json"
          }
        }
      }
    }
  }
}