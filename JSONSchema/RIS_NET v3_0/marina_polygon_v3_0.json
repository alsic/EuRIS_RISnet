{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "marina_polygon_v3_0.json",
  "title": "RISNET marina polygon schema",
  "type": "object",
  "required": [
    "type",
    "features"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "FeatureCollection"
      ]
    },
    "features": {
      "type": "array",
      "maxItems": 1,
      "items": {
        "title": "GeoJSON Feature",
        "type": "object",
        "required": [
          "type",
          "properties",
          "geometry"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Feature"
            ]
          },
          "properties": {
            "type": "object",
            "allOf": [
              {
                "$ref": "base/baseobject_v3_0.json"
              }
            ],
            "properties": {
              "marina_ref": {
                "description": "RIS_ID of the marina, replaced by the marina_id during import.",
                "type": "string",
                "format": "uuid"
              }
            },
            "required": [
              "marina_ref"
            ],
            "unevaluatedProperties": false
          },
          "geometry": {
            "$ref": "base/GeoJSONMultiPolygon_v3_0.json"
          }
        }
      }
    }
  }
}